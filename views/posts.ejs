<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@picocss/pico@1/css/pico.classless.min.css"
    />
    <link href="/css/style.css" rel="stylesheet" />
    <title>Homepage</title>
  </head>
  <body>
    <main>
      <div class="authOptions">
        <h1>Homepage</h1>
        <% if (typeof user === 'undefined') { %>
        <a role="button" href="/auth/login">Login</a>
        <% } else { %>
        <a role="button" href="/auth/logout">Logout</a>
        <% } %>
      </div>
      <h2>Welcome, <%= (typeof user !== 'undefined' && user) ? user.uname : "Visitor" %></h2>
      
      <div class="container">
        <div style="margin-bottom: 3rem; border-bottom: 1px solid #eee; padding-bottom: 10px;">
            <strong>Sort By: </strong>
            <% if (typeof orderBy !== 'undefined' && orderBy === 'votes') { %>
                <a href="?orderby=date" class="secondary outline" role="button" style="padding: 5px 10px; font-size: 0.8rem;">New</a>
                <a href="?orderby=votes" role="button" style="padding: 5px 10px; font-size: 0.8rem;">Top</a>
            <% } else { %>
                <a href="?orderby=date" role="button" style="padding: 5px 10px; font-size: 0.8rem;">New</a>
                <a href="?orderby=votes" class="secondary outline" role="button" style="padding: 5px 10px; font-size: 0.8rem;">Top</a>
            <% } %>
        </div>

        <p>All Posts</p>
        <% posts.forEach(post => { %>
        <div class="individualPost">
          <a href="/posts/show/<%=post.id%>"><%= post.title %></a>
          <p><%= post.description %></p>
        </div>
        <% }) %>
      </div>

      <div style="margin-top: 2rem;">
        <a href="/subs/list">Subgroups</a>
      </div>

      <div style="margin-top: 1rem;">
        <a role="button" href="/posts/create">Create Post</a>
      </div>
    </main>
  </body>
</html>